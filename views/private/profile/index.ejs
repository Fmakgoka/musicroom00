<%- include('../../include/private/header') -%>

<section class="profile pt-4 pb-4">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-4"></div>
            <div class="col-sm-12 col-md-8">
                <%- include('../../include/messages') -%>
            </div>
        </div>
        <div class="row">
            <div class="col col-sm-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="user-image" style="background-image: url('<%= user.image %>');"></div>
                        <form method="POST" action="/profile/image" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="image"></label>
                                <input type="file" name="image" id="image" class="form-control-file<%= typeof image_validation != 'undefined' ? ' is-invalid' : null %>">
                                <small class="invalid-feedback"><%= typeof image_validation != 'undefined' ? image_validation : null %></small>
                            </div>
                            <button type="submit" class="btn btn-primary">Update Image</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col col-sm-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <form method="POST"class="form-horizontal" action="/profile/email">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="text" name="email" id="email" class="form-control<%= typeof email_validation != 'undefined' ? ' is-invalid' : null %>" value="<%= typeof email != 'undefined' ? email : user.email %>">
                                <small class="invalid-feedback"><%= typeof email_validation != 'undefined' ? email_validation : null %></small>
                            </div>
                            <button type="submit" class="btn btn-primary">Change email</button>
                        </form>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-body">
                        <form method="POST" action="/profile/username">
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input type="text" name="username" id="username" class="form-control<%= typeof username_validation != 'undefined' ? ' is-invalid' : null %>" value="<%= typeof username != 'undefined' ? username : user.username %>">
                                <small class="invalid-feedback"><%= typeof username_validation != 'undefined' ? username_validation : null %></small>
                            </div>
                            <button type="submit" class="btn btn-primary">change Username</button>
                        </form>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-body">
                        <form method="POST" action="/profile/password">
                            <div class="form-group">
                                <label for="password">Old Password</label>
                                <input type="password" name="password_old" id="password_old" class="form-control<%= typeof password_validation != 'undefined' ? ' is-invalid' : null %>" value="<%= typeof password != 'undefined' ? password : null %>">
                                <small class="invalid-feedback"><%= typeof passwordOld_validation != 'undefined' ? password_validation : null %></small>
                            </div>

                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" name="password" id="password" class="form-control<%= typeof password_validation != 'undefined' ? ' is-invalid' : null %>" value="<%= typeof password != 'undefined' ? password : null %>">
                                <small class="invalid-feedback"><%= typeof password_validation != 'undefined' ? password_validation : null %></small>
                            </div>

                            <div class="form-group">
                                <label for="password_repeat">Confirm Password</label>
                                <input type="password" name="password_repeat" id="password_repeat" class="form-control<%= typeof password_repeat_validation != 'undefined' ? ' is-invalid' : null %>" value="<%= typeof password_repeat != 'undefined' ? password_repeat : null %>">
                                <small class="invalid-feedback"><%= typeof password_repeat_validation != 'undefined' ? password_repeat_validation : null %></small>
                            </div>
                            <button type="submit" class="btn btn-primary">change Password</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('../../include/private/footer') -%>