<%- include('../include/public/header') -%>
<form method="POST">
        <h1 class="text-center mb-4"><%= page_title %></h1>
        <%- include('../include/messages') -%>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" class="form-control<%= typeof password_validation != 'undefined' ? ' is-invalid' : null %>" value="<%= typeof password != 'undefined' ? password : null %>">
            <small class="invalid-feedback"><%= typeof password_validation != 'undefined' ? password_validation : null %></small>
        </div>
        <div class="form-group">
            <label for="passwordRepeat">Confirm Password</label>
            <input type="password" name="passwordRepeat" id="passwordRepeat" class="form-control<%= typeof passwordRepeat_validation != 'undefined' ? ' is-invalid' : null %>" value="<%= typeof passwordRepeat != 'undefined' ? passwordRepeat : null %>">
            <small class="invalid-feedback"><%= typeof passwordRepeat_validation != 'undefined' ? passwordRepeat_validation : null %></small>
        </div>
        <ul class="mb-3">
            <li><a href="/login">Login</a></li>
            <li><a href="/signup">Signup</a></li>
        </ul>
        <button type="submit" class="btn btn-primary btn-block">Reset Password</button>
</form>
<%- include('../include/public/footer') -%>