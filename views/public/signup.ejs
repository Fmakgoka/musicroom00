<%- include('../include/public/header') -%>
<form method="POST">
    <h1 class="text-center mb-4"><%= page_title %></h1>
    <%- include('../include/messages') -%>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name="email" id="email" class="form-control<%= typeof email_validation != 'undefined' ? ' is-invalid' : null %>" value="<%= typeof email != 'undefined' ? email : null %>">
        <small class="invalid-feedback"><%= typeof email_validation != 'undefined' ? email_validation : null %></small>
    </div>
    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" name="username" id="username" class="form-control<%= typeof username_validation != 'undefined' ? ' is-invalid' : null %>" value="<%= typeof username != 'undefined' ? username : null %>">
        <small class="invalid-feedback"><%= typeof username_validation != 'undefined' ? username_validation : null %></small>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" id="password" class="form-control<%= typeof password_validation != 'undefined' ? ' is-invalid' : null %>" value="<%= typeof password != 'undefined' ? password : null %>">
        <small class="invalid-feedback"><%= typeof password_validation != 'undefined' ? password_validation : null %></small>
    </div>
    <div class="form-group">
        <label for="passwordRepeat">Confirm Password</label>
        <input type="password" name="passwordRepeat" id="passwordRepeat" class="form-control<%= typeof passwordRepeat_validation != 'undefined' ? ' is-invalid' : null %>" value="<%= typeof passwordRepeat != 'undefined' ? passwordRepeat : null %>">
        <small class="invalid-feedback"><%= typeof passwordRepeat_validation != 'undefined' ? passwordRepeat_validation : null %></small>
    </div>
    <ul class="mb-3">
        <li><a href="/login">Login</a></li>
        <li><a href="/forgot-password">Forgot Password?</a></li>
    </ul>
    <button type="submit" class="btn btn-primary btn-block">Signup</button>
</form>
<%- include('../include/public/footer') -%>