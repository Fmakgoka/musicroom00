<%- include('../include/public/header') -%>
<form method="POST">
        <h1 class="text-center mb-4"><%= page_title %></h1>
        <%- include('../include/messages') -%>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="text" name="email" id="email" class="form-control<%= typeof email_validation != 'undefined' ? ' is-invalid' : null %>" value="<%= typeof email != 'undefined' ? email : null %>" autofocus>
          <small class="invalid-feedback"><%= typeof email_validation != 'undefined' ? email_validation : null %></small>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" id="password" class="form-control<%= typeof password_validation != 'undefined' ? ' is-invalid' : null %>" value="<%= typeof password != 'undefined' ? password : null %>">
          <small class="invalid-feedback"><%= typeof password_validation != 'undefined' ? password_validation : null %></small>
        </div>
        <ul class="mb-3">
            <li><a href="/signup">Signup</a></li>
            <li><a href="/forgot-password">Forgot Password?</a></li>
        </ul>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
        <div class="text-center mt-3 mb-3">OR</div>
        <a href="/login/deezer" class="btn btn-block btn-deezer">Login With Deezer <span class="fa fa-arrow-right pull-left mt-1"></span></a>
        <a href="/login/google" class="btn btn-block btn-google"><i class="fa fa-google pull-left mt-1"></i> Login With Google</a>
</form>
<%- include('../include/public/footer') -%>